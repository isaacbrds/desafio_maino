<section class="py-3">
  
  
  <table class="table">
    <thead>
      <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Owner</th> </th>
        <th colspan="3"> <%= link_to "#{t('new')} Post", new_post_path %> </th>
        <th ><%= t('tags') %></th> 
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td> <%= post.title %> </td>
        <td> <%= post.user.email %></td>
        <td> <%= link_to 'Edit', edit_post_path(post) %> </td>
        <td>
          <%= link_to 'Show', post_path(post) %>
        </td>
        <td>
          <%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Você está certo disso ?' } %>
        </td>
        <% post.tags.each do |tag| %>
          <td>
            <%= tag.title %>
          </td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
  
  
</section>
