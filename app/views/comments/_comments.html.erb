<h3 class="mt-3">Comments</h3>
<div class="mt-3">
    <% @post.comments.each do |comment|%>
        <div class="card mb-3">
            <div class="card-body">
                <h6 class="card-subtitle mb-2 text-muted"><%= comment.created_at.strftime("%d/%m/%Y %H:%M:%S")%> by <%= comment.user.email %></h6>
                <p class="card-text"><%= comment.content %></p>
            </div>
        </div>
    <% end %>
</div>